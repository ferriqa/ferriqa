{
  "name": "ferriqa-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "dev:bun": "bun run packages/core/src/index.ts",
    "dev:node": "node --import tsx packages/core/src/index.ts",
    "dev:deno": "deno run --allow-all packages/core/src/index.ts",
    "test": "bun test packages/core/src/__tests__/unit packages/core/src/__tests__/integration packages/core/src/__tests__/cross-runtime",
    "test:unit": "bun test packages/core/src/__tests__/unit",
    "test:integration": "bun test packages/core/src/__tests__/integration",
    "test:cross-runtime": "bun test packages/core/src/__tests__/cross-runtime",
    "test:coverage": "bun test --coverage",
    "test:all": "bun test packages/core/src/__tests__/unit packages/core/src/__tests__/integration packages/core/src/__tests__/cross-runtime && node --import tsx --test packages/core/src/__tests__/unit/*.test.ts packages/core/src/__tests__/integration/*.test.ts packages/core/src/__tests__/cross-runtime/*.test.ts && deno test --allow-read --allow-env packages/core/src/__tests__/unit/*.test.ts packages/core/src/__tests__/integration/*.test.ts packages/core/src/__tests__/cross-runtime/*.test.ts",
    "lint": "oxlint",
    "format": "prettier --write .",
    "check": "prettier --check . && oxlint"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "bun-types": "^1.3.8",
    "oxlint": "^1.42.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "@cross/test": "npm:@jsr/cross__test",
    "@std/assert": "npm:@jsr/std__assert"
  },
  "dependencies": {
    "get-port-please": "^3.2.0",
    "zod": "^4.3.6"
  }
}
