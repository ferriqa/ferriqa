{
  "name": "ferriqa-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "dev:bun": "bun run packages/core/src/index.ts",
    "dev:node": "node --import tsx packages/core/src/index.ts",
    "dev:deno": "deno run --allow-all packages/core/src/index.ts",
    "test": "npm run test:all",
    "test:unit": "bun test packages/core/src/__tests__/unit",
    "test:integration": "bun test packages/core/src/__tests__/integration",
    "test:cross-runtime": "bun test packages/core/src/__tests__/cross-runtime",
    "test:coverage": "bun test --coverage",
    "test:bun": "bun test packages/core/src/__tests__/unit packages/core/src/__tests__/integration packages/core/src/__tests__/cross-runtime packages/cli/tests",
    "test:node": "node --import tsx --test packages/core/src/__tests__/unit/*.test.ts packages/core/src/__tests__/integration/*.test.ts packages/core/src/__tests__/cross-runtime/*.test.ts packages/cli/tests/*.test.ts",
    "test:deno": "deno test --allow-read --allow-env --allow-write packages/core/src/__tests__/unit/*.test.ts packages/core/src/__tests__/integration/*.test.ts packages/core/src/__tests__/cross-runtime/*.test.ts packages/cli/tests/*.test.ts",
    "test:all": "npm run test:bun && npm run test:deno && npm run test:node",
    "lint": "oxlint",
    "format": "prettier --write .",
    "check": "prettier --check . && oxlint"
  },
  "devDependencies": {
    "@cross/test": "npm:@jsr/cross__test",
    "@std/assert": "npm:@jsr/std__assert",
    "@types/node": "^25.1.0",
    "bun-types": "^1.3.8",
    "oxlint": "^1.42.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "get-port-please": "^3.2.0",
    "zod": "^4.3.6"
  }
}
